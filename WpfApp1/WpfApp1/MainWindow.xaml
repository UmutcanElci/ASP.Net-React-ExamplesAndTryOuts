<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:fa = "http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d" Height="740" Width="1280"
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!-- Left Menu -->
        <Border CornerRadius="10 0 0 10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="RoyalBlue" Offset="0"></GradientStop>
                    <GradientStop Color="RoyalBlue" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
            <!-- Panel -->
            <StackPanel>
                
                <!-- Administration Icon -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 35 0 0">
                    <Border CornerRadius="10" Width="60" Height="60">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Color="LightBlue" Offset="0"></GradientStop>
                                <GradientStop Color="RoyalBlue" Offset="1"></GradientStop>
                            </LinearGradientBrush>
                        </Border.Background>
                        <fa:IconImage Icon="UserGear" ></fa:IconImage>
                    </Border>
                    <StackPanel Margin="10 0 0 0" VerticalAlignment="Center">
                        <TextBlock Text="School Administration" FontSize="15" Margin="0 0 0 5" Foreground="LightBlue"></TextBlock>
                    </StackPanel>
                </StackPanel>
                <Separator Height="0.8" Margin="20 30" Background="LightSlateGray"></Separator>
                
                <!-- Menu Buttons -->
                <Button Style="{StaticResource menuButtonActive}" Click="Dashboard_Click">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}"></fa:IconImage>
                        <TextBlock Text="Dashboard" Style="{StaticResource menuButtonText}"></TextBlock>
                    </StackPanel>
                </Button>
                
                <Button Style="{StaticResource menuButton}" Click="Users_Click">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Users" Style="{StaticResource menuButtonIcon}"></fa:IconImage>
                        <TextBlock Text="Registers" Style="{StaticResource menuButtonText}"></TextBlock>
                    </StackPanel>
                </Button>
                
                <Button Style="{StaticResource menuButton}" Click="Class_Click">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Table" Style="{StaticResource menuButtonIcon}"></fa:IconImage>
                        <TextBlock Text="Class" Style="{StaticResource menuButtonText}"></TextBlock>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource menuButton}" Click="Teacher_Click">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="UserPen" Style="{StaticResource menuButtonIcon}"></fa:IconImage>
                        <TextBlock Text="Teacher" Style="{StaticResource menuButtonText}"></TextBlock>
                    </StackPanel>
                </Button>
                
                <Button Style="{StaticResource menuButton}" Click="Info_Click">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Info" Style="{StaticResource menuButtonIcon}"></fa:IconImage>
                        <TextBlock Text="Information" Style="{StaticResource menuButtonText}"></TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
        
        <!-- Main Section -->
        <Border Grid.Column="1" CornerRadius="0 10 10 0" MouseDown="UIElement_OnMouseDown">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="LightSkyBlue" Offset="0"></GradientStop>
                    <GradientStop Color="LightSkyBlue" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="200"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                
               
                <!-- Dashboard Content -->
                <Grid x:Name="DashboardContent" Grid.Row="2">
                    <TextBlock Text="Dashboard Content" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
                </Grid>

                <!-- Register Content -->
                <Grid x:Name="RegisterContent" Grid.Row="2" Visibility="Collapsed">
                    <TextBlock Text="Register Content" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
                </Grid>
                
                <!-- Class Content -->
                <Grid x:Name="ClassContent" Grid.Row="2" Visibility="Collapsed">
                    <TextBlock Text="Class Content" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
                </Grid>
                
                <!-- Teacher Content -->
                <Grid x:Name="TeacherContent" Grid.Row="2" Visibility="Collapsed">
                    <TextBlock Text="Teacher Content" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
                </Grid>
                
                <!-- Info Content -->
                <Grid x:Name="InfoContent" Grid.Row="2" Visibility="Collapsed">
                    <TextBlock Text="Info Content" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
                </Grid>
            </Grid>
            
        </Border> 
    </Grid>
</Window>
